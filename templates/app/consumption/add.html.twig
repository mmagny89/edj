{% extends "./app/index.html.twig" %}

{% block body %}
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold mb-6">Ajouter une consommation pour l'événement du {{ event.date | format_date('full') }}</h1>

        <div class="bg-white p-6 rounded-lg shadow-md">
            {{ form_start(form) }}
            <div class="grid grid-cols-1 gap-6">
                <div>
                    {{ form_label(form.member, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.member, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
                    {{ form_errors(form.member) }}
                </div>
                <div>
                    {{ form_label(form.consumable, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.consumable, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
                    {{ form_errors(form.consumable) }}
                </div>
                <div>
                    {{ form_label(form.quantity, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.quantity, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
                    {{ form_errors(form.quantity) }}
                </div>
            </div>
            <div class="mt-6">
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">Ajouter</button>
                <a href="{{ path('event_slate', {'id': event.id}) }}" class="ml-4 text-gray-600 hover:text-gray-800">Annuler</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
