{% extends 'app/index.html.twig' %}
{% block body %}
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="sm:flex sm:justify-between sm:items-center mb-3">
            <a class="text-sm font-medium text-violet-500 hover:text-violet-600 dark:hover:text-violet-400" href="{{ path('app_slate_details', {'event': event.id}) }}">
                &larr; Retour à l'ardoise de l'événement
            </a>
        </div>

        <header class="mb-4">
            <h1 class="text-2xl md:text-3xl text-gray-800 font-bold">Ardoise de l'adhérent {{ member.memberNumber }} pour {{ event.date|format_date('full') }}</h1>
        </header>

        <div class="bg-white p-6 rounded-lg shadow-md mb-6">
            <table class="w-full table-auto border-collapse">
                <thead>
                <tr class="bg-gray-200">
                    <th class="px-4 py-2">Consommable</th>
                    <th class="px-4 py-2">Quantité</th>
                    <th class="px-4 py-2">Prix unitaire</th>
                    <th class="px-4 py-2">Prix total</th>
                    <th class="px-4 py-2">Date</th>
                </tr>
                </thead>
                <tbody>
                {% for consumption in consumptions %}
                    <tr>
                        <td class="border px-4 py-2">{{ consumption.consumable.name }}</td>
                        <td class="border px-4 py-2">{{ consumption.quantity }}</td>
                        <td class="border px-4 py-2">{{ consumption.consumable.price|number_format(2) }} €</td>
                        <td class="border px-4 py-2">{{ (consumption.quantity * consumption.consumable.price)|number_format(2) }} €</td>
                        <td class="border px-4 py-2">{{ consumption.consumedAt|format_datetime('medium', 'short') }}</td>
                    </tr>
                {% endfor %}
                {% if consumptions is empty %}
                    <tr>
                        <td colspan="5" class="border px-4 py-2 text-center text-gray-500">Aucune consommation enregistrée pour ce membre.</td>
                    </tr>
                {% endif %}
                </tbody>
                <tfoot>
                <tr class="bg-gray-100 font-semibold">
                    <td colspan="3" class="border px-4 py-2 text-right">Total :</td>
                    <td class="border px-4 py-2">{{ total|number_format(2) }} €</td>
                    <td class="border px-4 py-2"></td>
                </tr>
                </tfoot>
            </table>
        </div>

        {# Bouton pour ouvrir la popup d'ajout de consommation #}
        <button id="add-consumption-btn" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">Ajouter une consommation</button>

        {# Modal pour ajouter une consommation #}
        <div id="add-consumption-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden flex items-center justify-center z-50">
            <div class="bg-white p-6 rounded-lg shadow-lg max-w-lg w-full">
                <h2 class="text-xl font-semibold mb-4">Ajouter une consommation pour l'adhérent {{ member.memberNumber }}</h2>
                <form id="add-consumption-form" action="{{ path('app_slate_consumption_add', {'event': event.id}) }}" method="post">
                    {{ form_start(form) }}
                    <input type="hidden" name="consumption[member]" value="{{ member.memberNumber }}">
                    <div class="grid grid-cols-1 gap-6">
                        <div>
                            {{ form_label(form.consumable, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.consumable, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
                            {{ form_errors(form.consumable) }}
                        </div>
                        <div>
                            {{ form_label(form.quantity, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.quantity, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
                            {{ form_errors(form.quantity) }}
                        </div>
                    </div>
                    <div class="mt-6 flex justify-end">
                        <button type="button" id="cancel-consumption-btn" class="text-gray-600 px-4 py-2 hover:text-gray-800">Annuler</button>
                        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 ml-4">Ajouter</button>
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>

        <script>
            document.getElementById('add-consumption-btn').addEventListener('click', () => {
                document.getElementById('add-consumption-modal').classList.remove('hidden');
            });
            document.getElementById('cancel-consumption-btn').addEventListener('click', () => {
                document.getElementById('add-consumption-modal').classList.add('hidden');
            });
        </script>
    </div>
{% endblock %}
