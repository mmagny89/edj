{% extends 'app/index.html.twig' %}
{% block body %}
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="sm:flex sm:justify-between sm:items-center mb-3">
            <a class="text-sm font-medium text-violet-500 hover:text-violet-600 dark:hover:text-violet-400" href="{{ path('app_slate') }}">
                &larr; Retour
            </a>
        </div>

        <header class="mb-4">
            <h1 class="text-2xl md:text-3xl text-gray-800 font-bold">Ardoise du {{ event.date|format_date('full') }}</h1>
        </header>

        {# Tableau récapitulatif par membre #}
        <div class="bg-white p-6 rounded-lg shadow-md mb-6">
            <h2 class="text-xl font-semibold mb-4">Récapitulatif par membre</h2>
            <table class="w-full table-auto border-collapse">
                <thead>
                <tr class="bg-gray-200">
                    <th class="px-4 py-2">Numéro d'adhérent</th>
                    <th class="px-4 py-2">Nom</th>
                    <th class="px-4 py-2">Total dépensé</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for memberNumber, data in membersData %}
                    <tr>
                        <td class="border px-4 py-2">{{ memberNumber }}</td>
                        <td class="border px-4 py-2">{{ data.member.memberNumber }}</td>
                        <td class="border px-4 py-2">{{ data.total|number_format(2) }} €</td>
                        <td class="border px-4 py-2">
                            <a href="{{ path('app_slate_member_details', {'event': event.id, 'memberNumber': memberNumber}) }}" class="text-blue-600 hover:underline">Voir le détail</a>
                        </td>
                    </tr>
                {% endfor %}
                {% if membersData is empty %}
                    <tr>
                        <td colspan="4" class="border px-4 py-2 text-center text-gray-500">Aucune consommation enregistrée pour cet événement.</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>

        {# Bouton pour ouvrir la popup d'ajout d'ardoise #}
        <button id="add-slate-btn" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">Ajouter une ardoise pour un membre</button>

        {# Modal pour ajouter une ardoise #}
        <div id="add-slate-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden flex items-center justify-center z-50">
            <div class="bg-white p-6 rounded-lg shadow-lg max-w-lg w-full">
                <h2 class="text-xl font-semibold mb-4">Ajouter une ardoise pour un membre</h2>
                <form id="add-slate-form" action="{{ path('app_slate_consumption_add', {'event': event.id}) }}" method="post">
                    {{ form_start(form) }}
                    <div class="grid grid-cols-1 gap-6">
                        <div>
                            {{ form_label(form.member, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.member, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
                            {{ form_errors(form.member) }}
                        </div>
                        <div>
                            {{ form_label(form.consumable, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.consumable, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
                            {{ form_errors(form.consumable) }}
                        </div>
                        <div>
                            {{ form_label(form.quantity, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.quantity, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
                            {{ form_errors(form.quantity) }}
                        </div>
                    </div>
                    <div class="mt-6 flex justify-end">
                        <button type="button" id="cancel-slate-btn" class="text-gray-600 px-4 py-2 hover:text-gray-800">Annuler</button>
                        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 ml-4">Ajouter</button>
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>

        <script>
            document.getElementById('add-slate-btn').addEventListener('click', () => {
                document.getElementById('add-slate-modal').classList.remove('hidden');
            });
            document.getElementById('cancel-slate-btn').addEventListener('click', () => {
                document.getElementById('add-slate-modal').classList.add('hidden');
            });
        </script>
    </div>
{% endblock %}
